<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="jp.ogiwara.kotlin.experimental.MainActivity">

    <data>
        <variable
            name="user"
            type="jp.ogiwara.kotlin.experimental.viewmodel.User" />
    </data>

    <LinearLayout
        android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <TextView
                    android:text="@{user.name}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="@{String.valueOf(user.age)}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="@{String.valueOf(user.likes)}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Button
                    android:onClick="@{user::onClickLike}"
                    android:text="Like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/list_repos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </ScrollView>
    </LinearLayout>
</layout>
